<Window x:Class="AppliWPF_BDD_Personels.WinDeconnexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppliWPF_BDD_Personels"
        mc:Ignorable="d"
        Title="WinDeconnexion" Height="200" Width="250" MaxHeight="200" MaxWidth="250">
    <Grid>
        
        <Label x:Name="Lblsedeconnecter" Content="Vous êtes déconnecté" HorizontalAlignment="Center" Height="31" Margin="0,27,0,0" VerticalAlignment="Top" Width="134"/>
        <Button x:Name="BtnOUI" Content="OK" Click="BtnOK_Click" HorizontalAlignment="Center" Height="27" Margin="0,111,0,0" VerticalAlignment="Top" Width="76">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="LightGray">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
